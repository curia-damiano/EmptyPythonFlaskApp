{
	"name": "Flask TypeScript Dev Container",
	"image": "mcr.microsoft.com/vscode/devcontainers/base:debian",
	"features": {
		// List of available features at https://containers.dev/features
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers/features/node:1": {
			"version": "18"
		},
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.13"
		}
	},
	"appPort": [5000],
	"customizations": {
		"vscode": {
			"extensions": [
				"github.copilot",
				"github.copilotchat",
				"ms-azuretools.vscode-docker",
				"ms-python.pylint",
				"ms-python.python",
				"ms-vscode.vscode-typescript",
				"streetsidesoftware.code-spell-checker"
			],
			"settings": {
				"python.pythonPath": "${workspaceFolder}/.venv/bin/python",
				"python.linting.enabled": true,
				"python.linting.pylintEnabled": true,
				"python.testing.nosetestsEnabled": false,
				"python.testing.pytestEnabled": false,
				"python.testing.unittestEnabled": true,
				"python.testing.unittestArgs": [
					"-v",
					"-s",
					"./",
					"-p",
					"test_*.py"
				]
			}
		}
	},
	"containerEnv": {
        "PYTHONPATH": "${workspaceFolder}/src"
    },
	"mounts": [
		"type=bind,source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,readonly"
	],
	"postCreateCommand": "bash -c 'npm install && npm run debug && python3 -m venv .venv && source .venv/bin/activate && pip install --upgrade pip && pip install -r requirements.txt && echo -e \"\\e[32mInstallation of dev containers completed successfully.\\e[0m\"'"
}
